[Unit]
Description=Monitor /var/home/kiosk/.local/bin for new files
After=network.target

[Service]
Type=simple
ExecStart=/bin/bash -c 'inotifywait -m -e create,moved_to /var/home/kiosk/.local/bin | while read path action file; do chmod +x "${path}${file}"; done'
Restart=always
User=root

[Install]
WantedBy=multi-user.target